{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [ "DOM", "DOM.Iterable", "ESNext" ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "rootDirs": [ "src", "framework" ]
  },
  "exclude": [ "node_modules" ],
  "include": [ "**/*.ts", "**/*.tsx" ]
}